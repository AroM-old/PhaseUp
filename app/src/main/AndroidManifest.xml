<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.romero.android.phaseup">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="org.romero.android.phaseup.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.romero.android.phaseup.BlueBookActivity"
            android:label="@string/blue_book">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.romero.android.phaseup.MainActivity" />
        </activity>
        <activity
            android:name="org.romero.android.phaseup.AviationSongActivity"
            android:label="@string/aviation_songs"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.romero.android.phaseup.MainActivity" />
        </activity>
        <activity
            android:name="org.romero.android.phaseup.SoldierCreedActivity"
            android:label="@string/soldier_creed"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.romero.android.phaseup.MainActivity" />
        </activity>
        <activity
            android:name="org.romero.android.phaseup.RoomInspectionActivity"
            android:label="@string/room_inspection">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.romero.android.phaseup.MainActivity" />
        </activity>
        <activity
            android:name="org.romero.android.phaseup.WallLockerActivity"
            android:label="@string/wall_locker_inspection">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.romero.android.phaseup.MainActivity" />
        </activity>
        <activity
            android:name="org.romero.android.phaseup.ASUActivity"
            android:label="@string/asu_inspection"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.romero.android.phaseup.MainActivity" />
        </activity>
    </application>

</manifest>